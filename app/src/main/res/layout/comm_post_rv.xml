<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/comm_rv_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comm_rv_category"
        android:text="제목"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/comm_rv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="11sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/comm_rv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_title"
        app:layout_constraintLeft_toRightOf="@id/comm_rv_category"
        android:layout_marginLeft="10dp"
        android:text="area"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/comm_rv_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_title"
        app:layout_constraintLeft_toRightOf="@id/comm_rv_area"
        android:layout_marginLeft="10dp"
        android:text="created"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/comm_rv_rep_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_category"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/comm_rv_reply_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/comm_rv_rep_image"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_area"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:text="3"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/comm_rv_like_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/comm_rv_reply_num"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_category"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_outline_favorite_border_24"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/comm_rv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/comm_rv_like_image"
        app:layout_constraintTop_toBottomOf="@id/comm_rv_area"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/comm_rv_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:background="@drawable/imageview_radius"/>




</androidx.constraintlayout.widget.ConstraintLayout>