<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/info_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="43dp"
        android:textSize="25sp"
        app:layout_constraintRight_toLeftOf="@+id/my_profile"
        app:layout_constraintStart_toEndOf="@+id/info_image"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="프로필 수정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line1"
        android:layout_width="360dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_image"
        android:layout_marginTop="40dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/info_linear1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_receipt_24"/>

        <TextView
            android:id="@+id/info_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매내역"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="360dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_linear1"
        android:layout_marginTop="20dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/info_linear2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_shopping_basket_24"/>

        <TextView
            android:id="@+id/info_purchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매내역"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="360dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_linear2"
        android:layout_marginTop="20dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/info_linear3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_outline_favorite_border_24"/>

        <TextView
            android:id="@+id/info_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위시리스트"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="230dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/orange"
        android:text="로그아웃"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>